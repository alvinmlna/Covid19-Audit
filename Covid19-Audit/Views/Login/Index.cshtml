

<!DOCTYPE html>


<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>

    <style>
        html,
        body {
            height: 100%;
        }

        .btn-success {
            background-color: #478f7c !important;
        }

        body {
            display: -ms-flexbox;
            display: -webkit-box;
            display: flex;
            -ms-flex-align: center;
            -ms-flex-pack: center;
            -webkit-box-align: center;
            align-items: center;
            -webkit-box-pack: center;
            justify-content: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: 0 auto;
        }

            .form-signin .checkbox {
                font-weight: 400;
            }

            .form-signin .form-control {
                position: relative;
                box-sizing: border-box;
                height: auto;
                padding: 10px;
                font-size: 16px;
            }

                .form-signin .form-control:focus {
                    z-index: 2;
                }

            .form-signin #Username {
                margin-bottom: -1px;
                border-bottom-right-radius: 0;
                border-bottom-left-radius: 0;
            }

            .form-signin #PartnerName {
                margin-bottom: 10px;
                border-top-left-radius: 0;
                border-top-right-radius: 0;
            }
    </style>


    @Styles.Render("~/Content/fontawesome")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/listboxCss")


    <script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/listboxScript")

    <script>
        $(function () {
            $('#PartnerNames').listbox();
            //$('select#country').listbox({ 'searchbar': true });
        });
    </script>


</head>

<body class="text-center" id="login-content">
    @using Covid19_Audit.Class
    @model Covid19_Audit.Viewmodel.LoginViewModel

    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-signin" }))
    {
        <img class="mb-4" src="~/Content/Image/1200px-Infineon.svg.png" alt="" style="width:60%" />
        @*<img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" >*@
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Badge Id", @autocomplete = "off" } })

        <span style="margin: 10px; font-size: 16px; display: block;">Select Partners ( Max 2 )</span>

        @Html.ListBoxFor(m => m.PartnerNames,
            ViewBag.Skills as MultiSelectList,
            new { @class = "form-control", data_placeholder = "Choose a Country..." }
        )

        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" }) <br />
        @Html.ValidationMessageFor(model => model.PartnerNames, "", new { @class = "text-danger" })

        <br />

        @*<button class="btn btn-lg btn-success btn-block" onclick="location.href='@Url.Action("Index", "AuditForm")'" type="button">Sign in</button>*@
        <button class="btn btn-lg btn-success btn-block" type="submit">Sign in</button>
        <p class="mt-5 mb-3 text-muted">&copy; OE Applications</p>
    }
</body>
@Scripts.Render("~/bundles/ManagementWalkAboutJS")
@Scripts.Render("~/bundles/bootstrap")


</html>

