<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Covid 19 Compliance Audit</title>


    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/ManagementWalkAboutJS")
    @Scripts.Render("~/bundles/bootstrap")

    <style>
        @@media (min-width: 1200px) {
            .container {
                min-width: 1400px;
            }
        }

        .navbar-inverse {
            background-color: #478f7c !important;
        }

            .navbar-inverse .navbar-nav > li > a, .navbar-inverse .navbar-brand {
                color: #eee;
            }

        .btn-success {
            background-color: #478f7c !important;
        }

        .navbar-inverse .navbar-nav > .open > a, .navbar-inverse .navbar-nav > .open > a:focus, .navbar-inverse .navbar-nav > .open > a:hover {
            color: #fff;
            background-color: rgba(58, 120, 97, 1);
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#" style="margin-top:-5px;"><img src="~/Content/Image/ifx-logo-white.svg" width="80" height="30" class="d-inline-block align-top" alt="s"></a>
                @Html.ActionLink("COVID-19 Compliance Audit", "Index", "AuditForm", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Submit Audit", "Index", "AuditForm")</li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Report
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Checklist Report", "Index", "ChecklistReport")</li>
                        <li>@Html.ActionLink("Feedback Report", "Index", "FeedbackReport")</li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav pull-right">
                <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
            </ul>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
    </div>



    @RenderSection("scripts", required: false)
</body>

</html>
